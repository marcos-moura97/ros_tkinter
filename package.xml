<?xml version="1.0"?>
<?xml-model href="http://download.ros.org/schema/package_format2.xsd" schematypens="http://www.w3.org/2001/XMLSchema"?>
<package format="3">
  <name>ros_tkinter</name>
  <version>1.2.1</version>
  <description>ROS Tkinter: TKinter interface that displays ROS Topics. Project based on Rosboard</description>
  <maintainer email="marcos.moura@aluno.cefet-rj.com">Marcos Moura</maintainer>
  <license>BSD</license>

  <buildtool_depend condition="$ROS_VERSION == 1">catkin</buildtool_depend>
  <export>
    <build_type condition="$ROS_VERSION == 1">catkin</build_type>
    <build_type condition="$ROS_VERSION == 2">ament_python</build_type>
  </export>
</package>
